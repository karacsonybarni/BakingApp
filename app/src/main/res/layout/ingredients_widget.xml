<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ingredients_background"
    android:orientation="vertical"
    android:padding="@dimen/ingredients_widget_padding">

    <TextView
        android:id="@+id/recipeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ingredients_title_marginBottom"
        android:text="@string/ingredients_widget_empty"
        android:textSize="@dimen/ingredients_title_textSize"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/ingredients"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>